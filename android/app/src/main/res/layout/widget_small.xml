<?xml version="1.0" encoding="utf-8"?>
<!-- Small widget (2x2) - Epic Games Store style -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_glassmorphic_bg"
    android:padding="12dp">

    <!-- Header section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Logo placeholder (cyan square) - Use ImageView for RemoteViews -->
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@color/widget_primary"
            android:contentDescription="Logo" />

        <!-- Store name -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EPIC GAMES STORE"
            android:textSize="8sp"
            android:textColor="#999999"
            android:textStyle="bold"
            android:paddingLeft="6dp"
            android:letterSpacing="0.1" />

        <!-- FREE NOW -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE NOW"
            android:textSize="8sp"
            android:textColor="@color/widget_primary"
            android:textStyle="bold"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <!-- Main game card -->
    <RelativeLayout
        android:id="@+id/game_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="@drawable/widget_card_bg">

        <!-- Game image -->
        <ImageView
            android:id="@+id/game_image_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#1A1A1A"
            android:contentDescription="Game image" />

        <!-- Content container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/widget_text_gradient">

            <!-- Game title -->
            <TextView
                android:id="@+id/game_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="10dp" />

            <!-- Bottom row: FREE badge and discount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- FREE badge -->
                <TextView
                    android:id="@+id/free_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREE"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="#DD000000"
                    android:layout_marginRight="8dp" />

                <!-- Discount badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-100%"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/widget_discount_badge" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Empty state -->
    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/widget_no_games"
        android:textSize="11sp"
        android:textColor="#888888"
        android:visibility="gone" />
</RelativeLayout>
